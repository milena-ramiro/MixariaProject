@model EconomizeMais.tbTop30

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Excluir</title>
</head>
<body>
        <h3>Deseja realmente excluir o registro?</h3>

        <div class="form-horizontal">

            <h4>Top Produto</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.estab)
            @Html.HiddenFor(model => model.produto)
            @Html.HiddenFor(model => model.inicio.Date)
            @Html.HiddenFor(model => model.fim.Date)

            <br />
            <br />
            <br />
            <br />
            <b>Estabelecimento:</b>
            <br />
            @Html.DisplayFor(model => model.tbEstab.Nome)

            <b>Produto:</b>
            <br />
            @Html.DisplayFor(model => model.tbProdutos.Descricao)

            <br />
            <br />
            <b>Inicio:</b>
            <br />
            @Html.DisplayFor(model => model.inicio)

            <br />
            <br />
            <b>Fim:</b>
            <br />
            @Html.DisplayFor(model => model.fim)

            <br />
            <br />

            <b>Preço:</b>
            <br />
            @Html.DisplayFor(model => model.preco)

            <br />
            <br />

            <b>Promoção:</b>
            <br />
            @Html.DisplayFor(model => model.promocao)

            <br />
            <br />

            <b>Posição Top 30:</b>
            <br />
            @Html.DisplayFor(model => model.item_top)

            <br />
            <br />

        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <input type="submit" value="Excluir" class="btn btn-default" />
            <br />
            <br />
            @Html.ActionLink("Voltar", "Catalogo");

        }
    
</body>
</html>
