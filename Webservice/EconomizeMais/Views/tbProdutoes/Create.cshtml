@model EconomizeMais.Models.ProdutosViewModel

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Novo Produto</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm("Create", "tbProdutoes",
            FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <b>Código: </b>

        @Html.EditorFor(model => model.ProdutoId, new { htmlAttributes = new { @class = "form-control", maxlength = "14", size = "14" } })
        @Html.ValidationMessageFor(model => model.ProdutoId, "", new { @class = "text-danger" })

        <br />

        <b>Fabricante: </b>

        @Html.DropDownListFor(m => m.FabricanteId,
                                     (SelectList)ViewBag.mercado, "Selecionar", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FabricanteId, "", new { @class = "text-danger" })


        @*@Html.DropDownList("fabricante", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MercadoId, "", new { @class = "text-danger" })*@

        <br />


        <b>Descrição: </b>

        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", maxlength = "60", size = "60" } })
        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })

        <br />


        <b>Imagem: </b>
        <input type="file" id="Imagem" name="upload" />


        @*@Html.TextBoxFor(model => model.ImageUpload, new { type = "file", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ImageUpload, "", new { @class = "text-danger" })*@

        <br />
        <br />

        <input type="submit" value="Gravar" class="btn btn-default" />

    </div>
    }
    <br />
    <div>
        @Html.ActionLink("Voltar", "Catalogo")
    </div>

</body>
</html>