@model EconomizeMais.tbFabricante

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalhar</title>
</head>
<body>

    <div class="form-horizontal">
        <h4>Fabricante</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Codigo)


        <b>Nome:</b>
        <br />

        @Html.DisplayFor(model => model.Nome)

        <br />
        <br />


        <b>Logo:</b>
        <br />
        @if (Model.Logo != null)
        {

            <img src="@Url.Action("ExibirLogo","Arquivo", new { id =Model.Codigo })" width="150" height="150" />

        }
        else
        {

            <img src="~/Imagens/semimagem.jpg" width="150" height="150" />

        }


        <br />

    </div>
    <p>
        @Html.ActionLink("Alterar", "Edit", new { id = Model.Codigo }) |
        @Html.ActionLink("Voltar", "Catalogo")
    </p>
</body>
</html>