@model EconomizeMais.tbTop30

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalhar</title>
</head>
<body>

    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />

        <b>Top Produto:</b>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.estab)
        @Html.HiddenFor(model => model.produto)
        @Html.HiddenFor(model => model.inicio.Date)
        @Html.HiddenFor(model => model.fim.Date)

        <br />
        <br />
        <br />
        <br />

        <b>Estabelecimento:</b>
        <br />
        @Html.DisplayFor(model => model.tbEstab.Nome)

        <br />
        <br />

        <b>Produto:</b>
        <br />
        @Html.DisplayFor(model => model.tbProdutos.Descricao)

        <br />
        <br />
        <b>Inicio:</b>
        <br />
        @Html.DisplayFor(model => model.inicio)

        <br />
        <br />
        <b>Fim:</b>
        <br />
        @Html.DisplayFor(model => model.fim)

        <br />
        <br />

        <b>Preço:</b>
        <br />
        @Html.DisplayFor(model => model.preco)

        <br />
        <br />

        <b>Promoção:</b>
        <br />
        @Html.DisplayFor(model => model.promocao)

        <br />
        <br />

        <b>Posição Top 30:</b>
        <br />
        @Html.DisplayFor(model => model.item_top)

        <br />
        <br />

        <br />
        <br />

    </div>
    <p>
        @Html.ActionLink("Alterar", "Edit", new { produto = Model.produto, estab = Model.estab, inicio = Model.inicio.Date, fim = Model.fim.Date }) |
        @Html.ActionLink("Voltar", "Catalogo")
    </p>
</body>
</html>