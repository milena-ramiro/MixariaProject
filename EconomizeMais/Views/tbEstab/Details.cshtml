@model EconomizeMais.tbEstab

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalhar</title>
</head>
<body>

    <div class="form-horizontal">
        <h4>Estabelecimento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Codigo)


        <b>Nome:</b>
        <br />
        @Html.DisplayFor(model => model.Nome)

        <br />
        <br />
        <b>Rua:</b>
        <br />
        @Html.DisplayFor(model => model.Rua)

        <br />
        <br />
        <b>Nro:</b>
        <br />
        @Html.DisplayFor(model => model.Nro)

        <br />
        <br />

        <b>Bairro:</b>
        <br />
        @Html.DisplayFor(model => model.Bairro)

        <br />
        <br />

        <b>Tipo:</b>
        <br />
        @Html.DisplayFor(model => model.tbTipoEst.Descricao)

        <br />
        <br />

        <b>Municipio:</b>
        <br />
        @Html.DisplayFor(model => model.tbMunicipio.Nome)

        <br />
        <br />

        <b>Logo:</b>
        <br />
        @if (Model.Logo != null)
         {

            <img src="@Url.Action("ExibirLogoEstab","Arquivo", new { id = Model.Codigo })" width="150" height="150" />

         }
        else
        {

            <img src="~/Imagens/semimagem.jpg" width="150" height="150" />

        }
        <br />
        <br />

    </div>
    <p>
        @Html.ActionLink("Alterar", "Edit", new { id = Model.Codigo}) |
        @Html.ActionLink("Voltar", "Catalogo")
    </p>
</body>
</html>