@using PagedList.Mvc;
@model PagedList.IPagedList<EconomizeMais.tbPromocao>

@{
    ViewBag.Title = "Catalogo de Promocoes";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Produtos</title>
</head>
<body>
    <div class="card-header">
        <i class="fa fa-table"></i> <center> <h3>Cadastro de Promocões</h3> </center>
    </div>
    <p>
        @Html.ActionLink("Novo", "Create")
    </p>
    @foreach (var p in Model)
    {
        @Html.Partial("Index", p)
    }

    <p class="text-primary">
        Página @Model.PageNumber de @Model.PageCount
    </p>

    <span class="btn-group pull-right">
        @Html.PagedListPager(Model, pagina => Url.Action("Catalogo", new { pagina }))
    </span>
</body>
</html>

