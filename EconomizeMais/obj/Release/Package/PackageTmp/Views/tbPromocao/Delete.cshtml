@model EconomizeMais.tbPromocao

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Excluir</title>
</head>
<body>
    <h3>Deseja realmente excluir o registro?</h3>

    <div class="form-horizontal">

        <div class="form-horizontal">
            <h4>Promoção</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Estab)
            @Html.HiddenFor(model => model.Produto)
            @Html.HiddenFor(model => model.Inicio.Date)
            @Html.HiddenFor(model => model.Fim.Date)


            <b>Estabelecimento:</b>
            <br />
            @Html.DisplayFor(model => model.tbEstab.Nome)

            <br />
            <br />
            <b>Produto:</b>
            <br />
            @Html.DisplayFor(model => model.tbProdutos.Descricao)

            <br />
            <br />
            <b>Início:</b>
            <br />
            @Html.DisplayFor(model => model.Inicio.Date)

            <br />
            <br />
            <b>Fim:</b>
            <br />
            @Html.DisplayFor(model => model.Fim.Date)

            <br />
            <br />

        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <input type="submit" value="Excluir" class="btn btn-default" />
            <br />
            <br />
            @Html.ActionLink("Voltar", "Catalogo");

        }
    </div>
</body>
</html>
