<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EconomizeeMais</title>

    <style>

        #meuMenu ul{
                padding:0px;
                margin:0px;
                background-color:darkred;
                list-style:none;
                color:white;
                list-style-type: none;
        }
        #meuMenu ul li { display: inline; }
        #meuMenu ul li a {
            padding: 2px 10px;
            display: inline-block;

            /* visual do link */
            background-color:darkred;
            color: white;
            text-decoration: none;
           /* border-bottom:3px solid darkred;*/
            list-style-type: none;
        }
        #meuMenu ul li a:hover {
            background-color:#CD0000;
            color: white;
           /* border-bottom:3px solid #EA0000;*/
            list-style-type: none;
        }
        hr{color:darkred}
    </style>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <center> <h1 style="color:darkred">Mixaria</h1>  </center>
    <hr size="2" color="darkred"/>
    <div class="container">

        <nav id="meuMenu">
            <ul>
                <li><a href="#"> @Html.ActionLink("Fabricantes", "Catalogo", "tbFabricantes")</a></li> |
                <li><a href="#"> @Html.ActionLink("Produtos", "Catalogo", "tbProdutoes") </a></li> |
                <li><a href="#"> @Html.ActionLink("Estabelecimentos", "Catalogo", "tbEstab")</a></li> |
                <li><a href="#"> @Html.ActionLink("Promoções", "Catalogo", "tbPromocao") </a></li> |
                <li><a href="#"> @Html.ActionLink("Top 30", "Catalogo", "tbTop30") </a></li> |
                <li><a href="#"> @Html.ActionLink("Usuários", "Catalogo", "tbUsuarios") </a></li> |
            </ul>
        </nav>

        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
