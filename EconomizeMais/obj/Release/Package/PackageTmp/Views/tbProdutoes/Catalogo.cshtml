@using PagedList.Mvc;
@model PagedList.IPagedList<EconomizeMais.tbProdutos>

@{
    ViewBag.Title = "Catalogo de Produtos";
}

<!DOCTYPE html>
<style>
    .teste {
        justify-content: right;
        text-align: right
    }

    .lixo {
        margin: 0px;
    }
</style>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Produtos</title>
</head>
<body>
    <div class="card-header">
        <i class="fa fa-table"></i> <center> <h3>Cadastro de Produtos</h3> </center>

        @using (Html.BeginForm("Catalogo", "tbProdutoes", FormMethod.Get))
        {
            <div class="teste">
                Produto: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                <input type="submit" value="Pesquisar" />
            </div>
        }



    </div>
    <p>
        @Html.ActionLink("Novo", "Create")
    </p>
    @foreach (var p in Model)
    {
        @Html.Partial("Index", p)
    }

    <p class="text-primary">
        Página @Model.PageNumber de @Model.PageCount
    </p>

    <span class="btn-group pull-right">
        @Html.PagedListPager(Model, pagina => Url.Action("Catalogo", new { pagina }))
    </span>
</body>
</html>


